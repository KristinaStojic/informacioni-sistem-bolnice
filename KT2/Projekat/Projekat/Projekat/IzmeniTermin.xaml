        mc:Ignorable="d"
        Title="IzmeniTermin" Height="486.8" Width="479.2" WindowStartupLocation="CenterScreen" Background="AliceBlue">
    <Grid Margin="0,0,-5,-2.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
