        <Button Content="Odustani" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="113,392,0,0" Height="30" Click="Button_Click"/>
        <DatePicker HorizontalAlignment="Left" Name="datum" Text="dd/MM/yyyy" VerticalAlignment="Top" Margin="278,230,0,0" Width="153" Height="23"/>
        <Label Content="Prostorija" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="278,286,0,0" Height="26" Width="90"/>
        <ComboBox HorizontalAlignment="Left"  VerticalAlignment="Top" Width="152" Margin="278,329,0,0" Height="22"/>
        <TextBox HorizontalAlignment="Left" x:Name="text2" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Margin="36,128,0,0"/>

    </Grid>
