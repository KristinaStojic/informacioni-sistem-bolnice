<Window x:Class="Projekat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Background="AliceBlue" Grid.Column="0" Grid.Row="0" Width="300" Height="100" Margin="40" Click ="Button_Click">Upravnik</Button>
        <Button Background="AliceBlue" Grid.Column="0" Grid.Row="1" Width="300" Height="100" Margin="40" Click="Button_Click_3">Sekretar</Button>
        <Button Background="AliceBlue" Grid.Column="1" Grid.Row="0" Width="300" Height="100" Margin="40" Click ="Button_Click_1">Lekar</Button>
        <Button Background="AliceBlue" Grid.Column="1" Grid.Row="1" Width="300" Height="100" Margin="40" Click ="Button_Click_2">Pacijent</Button>
    </Grid>
</Window>
