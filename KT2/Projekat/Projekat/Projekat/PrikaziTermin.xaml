<Window x:Class="Projekat.PrikaziTermin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Prikaz termina" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="0" x:Name="dataGridTermini" ItemsSource="{Binding Termini}" IsReadOnly="True" 
                  SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Left" 
                  Height="223" Margin="35,43,0,0" VerticalAlignment="Top" Width="569" GridLinesVisibility="All" Background="#FFE4DEDE" FontSize="13">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Redni broj" Binding="{Binding IdTermin}"  />
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" />
                <DataGridTextColumn Header="Vreme pocetka" Binding="{Binding VremePocetka}"/>
                <DataGridTextColumn Header="Vreme kraja" Binding="{Binding VremeKraja}"/>
                <DataGridTextColumn Header="ID pacijenta" Binding="{Binding Pacijent}"/>
                <DataGridTextColumn Header="ID lekara" Binding="{Binding Lekar.IdLekara}"  />
                <DataGridTextColumn Header="Prostorija" Binding="{Binding Prostorija}" />
                <DataGridTextColumn Header="Tip usluge " Binding="{Binding tipTermina}" />
            </DataGrid.Columns>

        </DataGrid>
        <Button Content="Zakaži termin" Grid.Column="1" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="142" Height="50" Click="Button_Click" />
        <Button Content="Izmeni termin" Grid.Column="1" HorizontalAlignment="Left" Margin="10.4,126,0,0" VerticalAlignment="Top" Width="142" Height="50" Click="Button_Click_1"/>
        <Button Content="Nazad" HorizontalAlignment="Left" Margin="35,303,0,0" VerticalAlignment="Top" Width="142" Height="50" Click="Button_Click_3"/>
        <Button Content="Otkaži termin" Grid.Column="1" HorizontalAlignment="Left" Margin="10.4,211,0,0" VerticalAlignment="Top" Width="142" Height="55" Click="Button_Click_2"/>
        <Button Content="Pronađi po id" Grid.Column="1" HorizontalAlignment="Left" Margin="10.4,299,0,0" VerticalAlignment="Top" Width="142" Height="54" />
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="54" Margin="357,299,0,0" Stroke="Black" VerticalAlignment="Top" Width="180"/>
        <TextBlock HorizontalAlignment="Left" Margin="357,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="180"><Run Text=" Prostorije"/><LineBreak/><Run Text="     1-10 -&gt; ordinacije "/><LineBreak/><Run Text="     10-30 -&gt; operacione sale"/></TextBlock>
    </Grid>
</Window>
