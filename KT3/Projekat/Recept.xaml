<Page x:Class="Projekat.Recept"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Recept" Height="600" Width="800" >
    <Grid Margin="-14,0,-6,3"  Background="AliceBlue">
        <StackPanel Height="40" Background="#e8f1f5" Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel Height="40" Width="150" HorizontalAlignment="Left" Margin="10, 0, 0, 0" Orientation="Horizontal">
                <Image Source="slike/medical-symbol.png" Width="35" Height="35" HorizontalAlignment="Left"/>
                <TextBlock Text="ZDRAVO" FontSize="25" Margin="5, 0, 0,0" FontWeight="Bold" FontStyle="Italic" />
            </StackPanel>
            <StackPanel Height="40" Width="620" HorizontalAlignment="Right">
                <Menu Margin="480, 7.5, 0, 0" BorderThickness="0.5" BorderBrush="#004a7c">
                    <MenuItem Header="_Ime i prezime">
                        <MenuItem.Icon>
                            <Image Source="/slike/user.png" />
                        </MenuItem.Icon>
                        <MenuItem Header="_Vaš profil" />
                        <Separator/>
                        <MenuItem Header="_Popuni anketu" />
                        <Separator/>
                        <MenuItem Header="_Izaberite jezik" IsEnabled="False" />
                        <MenuItem Header="_sr" />
                        <MenuItem Header="_en"/>
                        <Separator />
                        <MenuItem Header="_Izaberite temu" IsEnabled="False" />
                        <MenuItem Header="_Svetla" Name="svetlaTema" />
                        <MenuItem Header="_Tamna"/>
                        <Separator />
                        <MenuItem Header="_Odjavite se" Name="odjava" Click="odjava_Click"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </StackPanel>
        <TextBlock Margin="20,40,0,530" FontSize="14" Foreground="#004a7c" Height="25" >
                <Hyperlink NavigateUri="PrikaziTermin.xaml">
                    <Run Text="Početna stranica"/>
                </Hyperlink>
                <Run Text="  "/>
                <Hyperlink Name="zakazi" Click="zakazi_Click">
                    <Run Text="Zakažite termin"/>
                </Hyperlink>
                <Run Text="  "/>
                <Hyperlink Name="uvid" Click="uvid_Click">
                    <Run Text="Uvid u zakazane termine"/>
                </Hyperlink>
                <Run Text=" "/>
                <Hyperlink Name="karton" Click="karton_Click">
                    <Run Text="Zdravstveni karton"/>
                </Hyperlink>
        </TextBlock>

        <Image Source="slike/barkod.png" Height="60" Width="60" Margin="328,66,432,471" />
        <Image Source="slike/barkod.png" Height="60" Width="60" Margin="376,66,384,471" />
        <TextBox Name ="ime" HorizontalAlignment="Left" Height="22" Margin="385,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label Content="Ime pacijenta" FontSize="15" HorizontalAlignment="Left" Margin="210,122,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="prezime" HorizontalAlignment="Left" Height="22" Margin="385,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label FontSize="15" Content="Prezime pacijenta" HorizontalAlignment="Left" Margin="210,172,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="id" HorizontalAlignment="Left" Height="24" Margin="385,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label FontSize="15" Content="ID pacijenta" HorizontalAlignment="Left" Margin="210,220,0,0" VerticalAlignment="Top"/>
        <TextBox IsEnabled="False" Name ="idLekara" HorizontalAlignment="Left" Height="24" Margin="385,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label  FontSize="15" Content="ID lekara koji izdaje lek" HorizontalAlignment="Left" Margin="210,276,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="naziv" IsEnabled="False" HorizontalAlignment="Left" Height="24" Margin="385,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Naziv leka" HorizontalAlignment="Left" Margin="210,322,0,0" VerticalAlignment="Top"/>
        <Label FontSize="15" Content="Datum propisivanja leka" HorizontalAlignment="Left" Margin="210,377,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="dani" IsEnabled="False" HorizontalAlignment="Left" Height="24" Margin="385,422,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Koliko dana se koristi" HorizontalAlignment="Left" Margin="210,422,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="brojUzimanja" IsEnabled="False" HorizontalAlignment="Left" Height="24" Margin="385,482,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Koliko puta na dan" HorizontalAlignment="Left" Margin="210,482,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="sati" HorizontalAlignment="Left" IsEnabled="False" Height="24" Margin="385,542,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="55" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Pocetak terapije" HorizontalAlignment="Left" Margin="210,542,0,0" VerticalAlignment="Top"/>
        <!--Button Background="#FF6895C5"  Content="Odustani" HorizontalAlignment="Left" Margin="105,537,0,0" VerticalAlignment="Top" Width="91" Height="29"  Click="Button_Click"/>
        <Button Background="#FF6895C5" Content="Sacuvaj" HorizontalAlignment="Left" Margin="258,537,0,0" VerticalAlignment="Top" Width="91" Height="29" Click="Button_Click_1"/-->
        <TextBox Name ="datum" HorizontalAlignment="Left" IsEnabled="False" Margin="385,377,0,0" VerticalAlignment="Top" Width="175" Height="24"/>
        <Label Content="h" HorizontalAlignment="Left" Margin="445,540,0,0" VerticalAlignment="Top" Width="24"/>
        <TextBox x:Name ="min" HorizontalAlignment="Left" Height="24" IsEnabled="False" Margin="472,542,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" TextChanged="TextBox_TextChanged"/>
        <Label Content="min" HorizontalAlignment="Left" Margin="527,540,0,0" VerticalAlignment="Top" Width="33" Height="24" RenderTransformOrigin="0.318,0.615"/>
        <Image Source="slike/barkod.png" Height="60" Width="60" Margin="425,66,335,471" />

    </Grid>
</Page>
