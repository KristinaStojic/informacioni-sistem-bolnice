<Window x:Class="Projekat.Recept"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Recept" Height="650" Width="484.333"  WindowStartupLocation="CenterScreen">
    <Grid Margin="-14,0,-6,3" Background="#FF9AD8DE">
        <TextBox Name ="ime" HorizontalAlignment="Left" Height="22" Margin="245,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label Content="Ime pacijenta" FontSize="15" HorizontalAlignment="Left" Margin="70,42,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="prezime" HorizontalAlignment="Left" Height="22" Margin="245,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label FontSize="15" Content="Prezime pacijenta" HorizontalAlignment="Left" Margin="70,92,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="id" HorizontalAlignment="Left" Height="24" Margin="245,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label FontSize="15" Content="ID pacijenta" HorizontalAlignment="Left" Margin="70,140,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="idLekara" HorizontalAlignment="Left" Height="24" Margin="245,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label  FontSize="15" Content="ID lekara koji izdaje lek" HorizontalAlignment="Left" Margin="70,196,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="naziv" HorizontalAlignment="Left" Height="24" Margin="245,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Naziv leka" HorizontalAlignment="Left" Margin="70,242,0,0" VerticalAlignment="Top"/>
        <Label FontSize="15" Content="Datum propisivanja leka" HorizontalAlignment="Left" Margin="70,297,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="dani" HorizontalAlignment="Left" Height="24" Margin="245,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Koliko dana se koristi" HorizontalAlignment="Left" Margin="70,342,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="brojUzimanja" HorizontalAlignment="Left" Height="24" Margin="245,402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Koliko puta na dan" HorizontalAlignment="Left" Margin="70,402,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="sati" HorizontalAlignment="Left" Height="24" Margin="245,462,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="55" TextChanged="TextBox_TextChanged"/>
        <Label FontSize="15" Content="Pocetak terapije" HorizontalAlignment="Left" Margin="70,462,0,0" VerticalAlignment="Top"/>
        <Button Content="Odustani" HorizontalAlignment="Left" Margin="105,537,0,0" VerticalAlignment="Top" Width="91" Height="29"  Click="Button_Click"/>
        <Button Content="Sacuvaj" HorizontalAlignment="Left" Margin="258,537,0,0" VerticalAlignment="Top" Width="91" Height="29" Click="Button_Click_1"/>
        <DatePicker Name ="datum" HorizontalAlignment="Left" Margin="245,297,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="h" HorizontalAlignment="Left" Margin="305,460,0,0" VerticalAlignment="Top" Width="22"/>
        <TextBox x:Name ="min" HorizontalAlignment="Left" Height="24" Margin="332,462,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" TextChanged="TextBox_TextChanged"/>
        <Label Content="min" HorizontalAlignment="Left" Margin="387,460,0,0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.318,0.615"/>

    </Grid>
</Window>
