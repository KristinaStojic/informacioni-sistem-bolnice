<Window x:Class="Projekat.Skladiste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Skladiste" Height="330" Width="450" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Fajl">
                <MenuItem Header="Dodaj" Click="Button_Click_1"></MenuItem>
                <MenuItem Header="Zatvori" Click="Button_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Uredi">
                <MenuItem Header="Izmjeni" Click="Button_Click_3"></MenuItem>
                <MenuItem Header="Izbrisi" Click="Button_Click_2"></MenuItem>
                <MenuItem Header="Prebaci" Click="Button_Click_4"></MenuItem>
            </MenuItem>
            <MenuItem Header="Navigacija">
                <MenuItem Header="Osoblje" Click="MenuItem_Click_2"></MenuItem>
                <MenuItem Header="Prostorije" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="Komunikacija" Click="MenuItem_Click_2"></MenuItem>
                <MenuItem Header="Izvjestaj" Click="MenuItem_Click_3"></MenuItem>
            </MenuItem>
            <MenuItem Header="Pomoc">
                <MenuItem Header="Pomoc" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="O aplikaciji" Click="MenuItem_Click_1"></MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Background="White">
            <Button Click="Button_Click" ToolTip="Nazad">
                <Image Source="slike/back.png" Width="25" Height="25"></Image>
            </Button>
            <Button Click="Button_Click_1" ToolTip="Dodaj">
                <Image Source="slike/plus.png" Width="25" Height="25"></Image>
            </Button>
            <Button Click="Button_Click_3" ToolTip="Izmjeni">
                <Image Source="slike/pen.png" Width="25" Height="25"></Image>
            </Button>
            <Button Click="Button_Click_4" ToolTip="Prebaci">
                <Image Source="slike/move.png" Width="25" Height="25"></Image>
            </Button>
            <Button Click="Button_Click_5" ToolTip="Obrisi">
                <Image Source="slike/trash.png" Width="25" Height="25"></Image>
            </Button>
            <TextBox HorizontalAlignment="Right" Width="100" Height="25" Margin="232, 0, 0, 0"></TextBox>
            <Button ToolTip="Pretrazi">
                <Image Source="slike/search.png" Width="25" Height="25"></Image>
            </Button>
        </ToolBar>
        <TabControl>
            <TabItem Name="T1" Header="Staticka oprema" IsSelected="True">
                <DataGrid x:Name="dataGridT1" ItemsSource="{Binding OpremaStaticka}" IsReadOnly="True" 
                      SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Center" 
                      Height="161" Margin="10, 20, 10, 20" VerticalAlignment="Center" Width="241">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Naziv opreme              " Binding="{Binding NazivOpreme}"/>
                        <DataGridTextColumn Header="Kolicina                  " Binding="{Binding Kolicina}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Name="T2" Header="Dinamicka oprema">
                <Grid>
                    <DataGrid x:Name="dataGridT2" ItemsSource="{Binding OpremaDinamicka}" IsReadOnly="True" 
                        SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Center" 
                        Height="161" Margin="10, 20, 10, 20" VerticalAlignment="Center" Width="241">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Naziv opreme              " Binding="{Binding NazivOpreme}"/>
                            <DataGridTextColumn Header="Kolicina                  " Binding="{Binding Kolicina}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
