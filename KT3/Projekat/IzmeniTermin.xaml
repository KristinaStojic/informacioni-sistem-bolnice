        <GroupBox Header=" 1.  Izaberite tip termina" HorizontalAlignment="Left" Height="74" Margin="30,18,0,0" VerticalAlignment="Top" Width="302" RenderTransformOrigin="0.897,1.041">
            <ComboBox HorizontalAlignment="Left" Name="combo" VerticalAlignment="Bottom" Width="200" Margin="44,0,0,16" Height="25" SelectionChanged="combo_SelectionChanged">
                <ComboBoxItem>Operacija</ComboBoxItem>
                <ComboBoxItem>Pregled</ComboBoxItem>
            </ComboBox>
        </GroupBox>

        <!--GroupBox Header="Pronadjite lekara" HorizontalAlignment="Left" Height="220" Margin="240,24,0,0" VerticalAlignment="Top" Width="335" RenderTransformOrigin="0.568,0.482"/!-->
        <GroupBox Header="2.  Izaberite lekara" HorizontalAlignment="Left" Height="343" Margin="24,95,0,0" VerticalAlignment="Top" Width="318" RenderTransformOrigin="0.858,0.494">
            <TextBox DockPanel.Dock="Top" Name="txtFilter" TextChanged="txtFilter_TextChanged" Margin="3,12,5,283" TextAlignment="Left" Height="25" ToolTip="Pretrazite listu po prezimenu lekara" FontSize="14" BorderBrush="#FF3F72AF">
                <TextBox.Style>
                    <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <Style.Resources>
                            <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                <VisualBrush.Visual>
                                    <Label Content="Pronađite lekara po prezimenu, imenu ili specijalizaciji" Foreground="LightGray" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </GroupBox>
        <!--DataGrid x:Name="dgSearch" Margin="59,95,285,170" SelectionMode="Single" SelectionChanged="dgSearch_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdLekara}" Width="35" />
                <DataGridTextColumn Header="Prezime" Binding="{Binding PrezimeLek}" Width="80" />
                <DataGridTextColumn Header="Ime" Binding="{Binding ImeLek}" Width="80" />
                <DataGridTextColumn Header="Specijalizacija" Binding="{Binding specijalizacija}" Width="110"/>
            </DataGrid.Columns>
        </!-->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="300">
            <StackPanel Orientation="Horizontal">
                <Label Name="txtPitanje1" Margin="30, 0, 0, 0" Content="Tekst pitanja broj 1....." FontSize="14"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <RadioButton GroupName="pitanje1" x:Name="jedan" Margin="30,0,30,0" Content="1"/>
                <RadioButton GroupName="pitanje1" x:Name="dva" Margin="0, 0, 30, 0" Content="2"/>
                <RadioButton GroupName="pitanje1" x:Name="tri" Margin="0, 0, 30, 0" Content="3"/>
                <RadioButton GroupName="pitanje1" x:Name="cetiri" Margin="0, 0, 30, 0" Content="4"/>
                <RadioButton GroupName="pitanje1" x:Name="pet" Margin="0, 0, 30, 0" Content="5"/>
            </StackPanel>
        </StackPanel>
        <ListView x:Name="dgSearch" Height="200" SelectionMode="Single" Margin="32,160,268,115" SelectionChanged="dgSearch_SelectionChanged" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" 
                        Width="33" DisplayMemberBinding="{Binding IdLekara}"/>
                    <GridViewColumn Header="Ime" 
                                    Width="80" DisplayMemberBinding="{Binding ImeLek}"/>
                    <GridViewColumn Header="Prezime" 
                                    Width="80" DisplayMemberBinding="{Binding PrezimeLek}"/>
                    <GridViewColumn Header="Specijalizacija"
                                    Width="95" DisplayMemberBinding="{Binding specijalizacija}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <GroupBox Header="4.  Izaberite vreme termina" Height="105" Margin="352,255,35,0" VerticalAlignment="Top" RenderTransformOrigin="0.858,0.494"/>
        <TextBlock x:Name="imePrz" TextAlignment="Left" Background="White" IsEnabled="False" ToolTip="Ime i prezime izabranog lekara"
                   DataContextChanged="imePrz_DataContextChanged" Text ="{Binding}" HorizontalAlignment="Left" Height="25" Margin="41,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontSize="13"/>
        <Label Content="Ime i prezime lekara" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,367,0,0" Width="121"/>
    </Grid>
</Window>
