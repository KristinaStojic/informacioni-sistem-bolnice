<Window x:Class="Projekat.PrikaziSalu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Prostorije" Height="490" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Background="LightSteelBlue">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Menu DockPanel.Dock="Top" Background="CadetBlue">
                <MenuItem Header="Fajl" FontSize="15">
                    <MenuItem Header="Dodaj" FontSize="15" Click="Button_Click"></MenuItem>
                    <MenuItem Header="Zatvori" FontSize="15" Click="Button_Click_3"></MenuItem>
                </MenuItem>
                <MenuItem Header="Uredi" FontSize="15">
                    <MenuItem Header="Izmjeni" FontSize="15" Click="Button_Click_2"></MenuItem>
                    <MenuItem Header="Renoviraj" FontSize="15" Click="Button_Click_4"></MenuItem>
                    <MenuItem Header="Izbrisi" FontSize="15" Click="Button_Click_1"></MenuItem>
                </MenuItem>
                <MenuItem Header="Navigacija" FontSize="15">
                    <MenuItem Header="Osoblje" FontSize="15" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="Zahtjevi" FontSize="15" Click="MenuItem_Click_1"></MenuItem>
                    <MenuItem Header="Komunikacija" FontSize="15" Click="MenuItem_Click_2"></MenuItem>
                    <MenuItem Header="Izvjestaj" FontSize="15" Click="MenuItem_Click_3"></MenuItem>
                </MenuItem>
                <MenuItem Header="Pomoc" FontSize="15">
                    <MenuItem Header="Pomoc" FontSize="15" Click="MenuItem_Click_4"></MenuItem>
                    <MenuItem Header="O aplikaciji" FontSize="15" Click="MenuItem_Click_5"></MenuItem>
                </MenuItem>
            </Menu>
            <ToolBar Background="CadetBlue">
                <Button Click="Button_Click_3" ToolTip="Nazad">
                    <Image Source="slike/back.png" Width="30" Height="30"></Image>
                </Button>
                <Button Click="Button_Click" ToolTip="Dodaj">
                    <Image Source="slike/plus.png" Width="30" Height="30"></Image>
                </Button>
                <Button Click="Button_Click_2" ToolTip="Izmjeni">
                    <Image Source="slike/pen.png" Width="30" Height="30"></Image>
                </Button>
                <Button Click="Button_Click_4" ToolTip="Renoviraj">
                   <Image Source="slike/brush.png" Width="30" Height="30"></Image>
                </Button>
                <Button Click="Button_Click_1" ToolTip="Obrisi">
                    <Image Source="slike/trash.png" Width="30" Height="30"></Image>
                </Button>
                <TextBox HorizontalAlignment="Right" Width="130" Height="30" Margin="410, 0, 0, 0"></TextBox>
                <Button ToolTip="Pretrazi">
                    <Image Source="slike/search.png" Width="30" Height="30"></Image>
                </Button>
            </ToolBar>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <DataGrid x:Name="dataGridSale" ItemsSource="{Binding Sale}" IsReadOnly="True" 
                      SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Center" 
                      Height="225" Margin="10, 50, 10, 20" VerticalAlignment="Center" Width="531">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Broj sale                    " Binding="{Binding brojSale}"/>
                    <DataGridTextColumn Header="Namjena sale                                        " Binding="{Binding Namjena}" />
                    <DataGridTextColumn Header="Tip sale                                            " Binding="{Binding TipSale}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal">
                <Button Height="50" Width="165" Margin="235, 10, 10, 10" Background="CadetBlue" Click="Button_Click_5">Pregled staticke opreme</Button>
                <Button Height="50" Width="165" Margin="10, 10, 10, 10" Background="CadetBlue" Click="Button_Click_6">Pregled dinamicke opreme</Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
