<Window x:Class="Projekat.PrikazTerminaLekar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="PrikazTerminaLekar" Height="534.795" Width="924.465">
    <Grid Background="#FF87EAFA" Margin="0,0,-6,-4">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Column="1" x:Name="dataGridTermini" ItemsSource="{Binding Termini}" IsReadOnly="True"  
                  SelectionMode="Single" AutoGenerateColumns="False" AutoGeneratingColumn="generateColumns" HorizontalAlignment="Left" 
                  Height="453" Margin="20,24,0,0" VerticalAlignment="Top" Width="691" GridLinesVisibility="All" Background="#FFA4E4EA" FontSize="13" BorderBrush="DarkRed" Grid.ColumnSpan="2">
            <DataGrid.Columns >
                <DataGridTextColumn Header="ID" Binding="{Binding IdTermin}"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" />
                <DataGridTextColumn Header="Vreme pocetka" Binding="{Binding VremePocetka}"/>
                <DataGridTextColumn Header="Vreme kraja" Binding="{Binding VremeKraja}"/>
                <DataGridTextColumn Header="ID pacijenta" Binding="{Binding Pacijent.IdPacijenta}"/>
                <DataGridTextColumn Header="Ime pacijenta" Binding="{Binding Pacijent.ImePacijenta}" />
                <!-- PROMIJENITI NA ID KAD ISPRAVIMO CUVANJE-->
                <DataGridTextColumn Header="Prezime pacijenta" Binding="{Binding Pacijent.PrezimePacijenta}"/>
                <DataGridTextColumn Header="Prostorija" Binding="{Binding Prostorija.Id}"  />
                <DataGridTextColumn Header="Tip usluge " Binding="{Binding tipTermina}" />
            </DataGrid.Columns>

        </DataGrid>
        <Button Content="Zakaži termin" BorderBrush="DarkRed" Foreground="White" Background="DodgerBlue" HorizontalAlignment="Left" Margin="716,24,0,0" VerticalAlignment="Top" Width="161" Height="59" Click="Button_Click_1" />
        <Button Content="Izmeni termin" BorderBrush="DarkRed" Foreground="White" Background="DodgerBlue" HorizontalAlignment="Left" Margin="716,102,0,0" VerticalAlignment="Top" Width="161" Height="60" Click="Button_Click_2" RenderTransformOrigin="0.503,0.508"/>
        <Button Content="Nazad" BorderBrush="DarkRed" Foreground="White" Background="DodgerBlue" HorizontalAlignment="Left" Margin="716,344,0,0" VerticalAlignment="Top" Width="161" Height="60" Click="Button_Click_4" RenderTransformOrigin="1.009,1.654"/>
        <Button Content="Otkaži termin" BorderBrush="DarkRed" Foreground="White" Background="DodgerBlue" HorizontalAlignment="Left" Margin="716,182,0,0" VerticalAlignment="Top" Width="161" Height="60" Click="Button_Click_5" RenderTransformOrigin="0.503,0.508"/>
        <Button Content="Podaci o pacijentu" BorderBrush="DarkRed" Foreground="White" Background="DodgerBlue" HorizontalAlignment="Left" Margin="716,262,0,0" VerticalAlignment="Top" Width="161" Height="60" Click="Button_Click_6"/>





    </Grid>
</Window>
