<Window x:Class="Projekat.ObavestenjaPacijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="ObavestenjaPacijent" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="ObavestenjaPacijenta" ItemsSource="{Binding obavestenjaPacijent}" SelectionMode="Single" IsReadOnly="True" Margin="6,77,7.6,34" AutoGenerateColumns="False" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Width="80" Binding="{Binding Datum}"/>
                <DataGridTextColumn Header="Tip" Width="60" Binding="{Binding TipObavestenja}"/>
                <DataGridTextColumn Header="Vrsta" Width="70" Binding="{Binding Vrsta}"/>
                <DataGridTextColumn Header="Sadrzaj obavestenja" Width="550" Binding="{Binding SadrzajObavestenja}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Obavestenja o zakazanim, izmenjenim, otkazanim terminima i upotrebi lekova" HorizontalAlignment="Left" Margin="48,16,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
