<Window x:Class="Projekat.PrikaziTermin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Prikaz termina" Height="600" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid Background="#e3fdfd" Margin="0,0,-5.5,-2.5">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="340*"/>
            <ColumnDefinition Width="281*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="1" x:Name="dataGridTermini" ItemsSource="{Binding Termini}" IsReadOnly="True"
                  SelectionMode="Single" AutoGenerateColumns="False" AutoGeneratingColumn="generateColumns" HorizontalAlignment="Left" 
                  Height="450" Margin="10,25,0,0" VerticalAlignment="Top" Width="595" GridLinesVisibility="All" BorderThickness="2.5" FontSize="13" SelectionChanged="dataGridTermini_SelectionChanged" Grid.ColumnSpan="2">
            <DataGrid.Columns >
                <DataGridTextColumn Header="RBR" Binding="{Binding IdTermin}" />
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" />
                <DataGridTextColumn Header="Vreme pocetka" Binding="{Binding VremePocetka}"/>
                <DataGridTextColumn Header="Vreme kraja" Binding="{Binding VremeKraja}"/>
                <DataGridTextColumn Header="ID pacijenta" Binding="{Binding Pacijent.IdPacijenta}"/>
                <DataGridTextColumn Header="Ime pacijenta" Binding="{Binding Pacijent.ImePacijenta}" />
                <DataGridTextColumn Header="Prezime pacijenta" Binding="{Binding Pacijent.PrezimePacijenta}"/>
                <DataGridTextColumn Header="ID lekara" Binding="{Binding Lekar.IdLekara}"  />
                <DataGridTextColumn Header="Ime lekara" Binding="{Binding Lekar.ImeLek}" />
                <DataGridTextColumn Header="Prezime lekara" Binding="{Binding Lekar.PrezimeLek}"/>
                <DataGridTextColumn Header="Prostorija" Binding="{Binding Prostorija.Id}" />
                <DataGridTextColumn Header="Tip usluge " Binding="{Binding tipTermina}"  />
            </DataGrid.Columns>

        </DataGrid>
        <Button HorizontalAlignment="Left" Background="#404969" Margin="10,25,0,0" BorderBrush="#ff7f50" BorderThickness="2" VerticalAlignment="Top" Width="161" Height="59" Click="Button_Click" >
            <TextBlock Text="Zakaži termin" Foreground="White" FontSize="16"></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Background="#404969" Margin="10,125,0,0" BorderBrush="#ff7f50" BorderThickness="2" VerticalAlignment="Top" Width="161" Height="59" Click="Button_Click_1" RenderTransformOrigin="0.503,0.508">
            <TextBlock Text="Izmeni termin" Foreground="White" FontSize="16"></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Background="#404969" Margin="123,508,0,0"  BorderBrush="#ff7f50" BorderThickness="2" VerticalAlignment="Top" Width="142" Height="50" Click="Button_Click_3" Grid.Column="2">
            <TextBlock Text="Nazad" Foreground="White" FontSize="16"></TextBlock>
        </Button>
        <Button Background="#404969" BorderBrush="#ff7f50" BorderThickness="2" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Width="161" Height="59" Click="Button_Click_2" RenderTransformOrigin="0.503,0.508">
            <TextBlock Text="Otkaži termin" Foreground="White" FontSize="16"></TextBlock>
        </Button>
        <Button Name="zdravstveniKarton" Background="#404969" BorderBrush="#ff7f50" BorderThickness="2" Click="zdravstveniKarton_Click" HorizontalAlignment="Left" Margin="10,325,0,0" VerticalAlignment="Top" Width="161" Height="59" RenderTransformOrigin="0.503,0.508">
            <TextBlock Text="Zdravstveni karton" Foreground="White" FontSize="16"></TextBlock>
        </Button>

        <Rectangle Fill="#ff7f50"  HorizontalAlignment="Left" Height="50" Margin="35,508,0,0" Stroke="#ff7f50" VerticalAlignment="Top" Width="171" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left"  Margin="37,508,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="169" RenderTransformOrigin="1.806,0.4" Grid.Column="1"><Run FontWeight="Bold" Text=" Prostorije"/><LineBreak/><Run Text="     1-20 -&gt; ordinacije "/><LineBreak/><Run Text="     20-30 -&gt; operacione sale"/></TextBlock>

        <!--Button x:Name="zdravstevniKarton" Click="zdravstevniKarton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Margin="30,160,0,0">
            <Grid RenderTransformOrigin="0.267,0.59" Width="105" Height="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                    <ColumnDefinition Width="23*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="slike\back.png" Grid.Column="0" Margin="-1,-1,1,-1"/>
                <TextBlock Text="Zdravstveni karton" FontSize="10" Grid.Column="1" Margin="0,0,2,0"/>
            </Grid>
        </Button!-->
    </Grid>
</Window>
