<Window x:Class="Projekat.PrikaziPacijenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="PrikaziPacijenta" Height="500" Width="1000" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Margin="12" Click="Button_Click" Background="Azure">NAZAD</Button>
        <Label Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="165.4,32,0.4,65.6" Grid.RowSpan="2">Nalozi pacijenata</Label>
        <Button Grid.Row="1" Margin="121.6,96,50.6,41.2" Click="Button_Click_1" RenderTransformOrigin="1.366,0.614" Grid.ColumnSpan="2" Grid.Column="4" Grid.RowSpan="2">Dodaj</Button>
        <Button Grid.Column="4" Grid.Row="2" Margin="120.6,97.4,50.6,39.8" Click="Button_Click_2" RenderTransformOrigin="1.378,0.509" Grid.ColumnSpan="2" Grid.RowSpan="2">Izmeni</Button>
        <Button Grid.Column="4" Grid.Row="3" Margin="120.6,96.8,50.6,40.4" Click="Button_Click_3" RenderTransformOrigin="1.63,0.404" Grid.ColumnSpan="2" Grid.RowSpan="2">Obrisi</Button>
        <Button Grid.Column="4" Margin="120.6,0,50.6,39.6" Click="Button_Click_4" RenderTransformOrigin="1.63,0.404" Grid.ColumnSpan="2" Content="Zdravstveni karton" Grid.Row="1"/>

        <DataGrid x:Name="TabelaPacijenata" ItemsSource="{Binding PacijentiTabela}" SelectionMode="Single" IsReadOnly="True" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="4" Margin="60,52,65,40.4" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="30" Binding="{Binding IdPacijenta}"/>
                <DataGridTextColumn Header="Ime" Width="100" Binding="{Binding ImePacijenta}"/>
                <DataGridTextColumn Header="Prezime" Width="110" Binding="{Binding PrezimePacijenta}"/>
                <DataGridTextColumn Header="JMBG" Width="110" Binding="{Binding Jmbg}"/>
                <DataGridTextColumn Header="Pol" Width="40" Binding="{Binding Pol}"/>
                <DataGridTextColumn Header="Status" Width="60" Binding="{Binding StatusNaloga}"/>
                <DataGridTextColumn Header="Broj telefona" Width="100" Binding="{Binding BrojTelefona}"/>
                <DataGridTextColumn Header="Email" Width="130" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
