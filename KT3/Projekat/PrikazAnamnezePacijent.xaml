<Window x:Class="Projekat.PrikazAnamnezePacijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Anamneza" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Height="30" 
                        Width="90"
                        Margin="00, 10, 0, 0" 
                        Click="Button_Click">Nazad</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 30, 0, 0">
                <Label Margin="0, 0, 0, 0">Datum</Label>
                <DatePicker Margin="50, 0, 0, 0"
                            Name="datumAnamneze"
                            Width="200"
                            IsEnabled="False"></DatePicker>
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Margin="0">Lekar</Label>
                <TextBox Margin="54, 0, 0, 0"
                         Name="podaciLekar"
                         Width="200"
                         IsEnabled="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-25,20,0,0">
                <Label>Opis bolesti</Label>
                <TextBox x:Name="opisBolesti"
                         Margin="50, 0, 0, 0"
                         Width="200"
                         Height="110"
                         IsEnabled="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 20, 0, 0">
                <Label Margin="0">Terapija</Label>
                <TextBox Margin="50, 0, 0, 0"
                         Name="terpaija"
                         Width="200"
                         Height="110"
                         IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
