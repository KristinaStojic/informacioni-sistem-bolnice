        </GroupBox>
        <Button Content="Elektronsko placanje" HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" Margin="32,516,0,0" Height="30" Click="Button_Click_2" Background="#FFDFDFDF" />
        <Button Content="Potvrdi" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="333,516,0,0" Height="30" Click="Button_Click_1" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF" />
        <Button x:Name="odustani" Content="Odustani" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="465,516,0,0" Height="30" Click="odustani_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"  />
