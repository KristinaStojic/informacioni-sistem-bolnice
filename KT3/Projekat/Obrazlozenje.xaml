<Window x:Class="Projekat.Obrazlozenje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Obrazlozenje" Height="250" Width="400" Background="LightSteelBlue" WindowStartupLocation="CenterScreen" PreviewKeyDown="Window_PreviewKeyDown">
    <StackPanel>
        <Button ToolTip="Nazad, Ctrl + N" Width="30" Height="30" Margin="0, 10, 340, 10" Background="LightSteelBlue" BorderBrush="LightSteelBlue" Click="Button_Click">
            <Image Source="slike/back.png" Width="30" Height="30"></Image>
        </Button>
        <TextBox Width="350" Height="150" Name="obrazlozenje" IsEnabled="False"></TextBox>
    </StackPanel>
</Window>
