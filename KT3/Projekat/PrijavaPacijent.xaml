<Page x:Class="Projekat.PrijavaPacijent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrijavaPacijent" Background="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <StackPanel >
            <StackPanel Grid.RowSpan="1" Height="40" Background="#e8f1f5" Orientation="Horizontal">
                <StackPanel Height="40" Width="150" HorizontalAlignment="Left" Margin="10, 0, 0, 0" Orientation="Horizontal">
                    <Image Source="slike/medical-symbol.png" Width="35" Height="35" HorizontalAlignment="Left"/>
                    <TextBlock Text="ZDRAVO" FontSize="25" Margin="5, 0, 0,0" FontWeight="Bold" FontStyle="Italic" />
                </StackPanel>
                <StackPanel Width="415" Orientation="Horizontal" Margin="220, 0, 0, 0">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <Label Content="Korisnicko ime" FontSize="8"/>
                        <TextBox x:Name="korisnickoIme" Width="150" Height="22" Margin="0,0,0,10"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <Label Content="Lozinka" Margin="10, 0, 0, 0" FontSize="8"/>
                        <TextBox x:Name="lozinka" Width="150" Height="22" Margin="10,0,0,10"/>

                    </StackPanel>
                    <Button x:Name="prijava" Content="Prijavi se" Width="90" Height="22" Margin="10,13,0,5" Click="prijava_Click"/>
                </StackPanel>

            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
