<Window x:Class="Projekat.IzmjeniOpremu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Izmjeni opremu" Height="227" Width="334" WindowStartupLocation="CenterScreen" Background="LightSteelBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="Naziv" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Naziv:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Name="Kolicina" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Kolicina:</TextBlock>
        <Button Grid.Row="2" Grid.Column="0" Name="Potvrdi" Click="Potvrdi_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Width="95" Height="40" Background="CadetBlue" Margin="60, 10, 10, 10">Potvrdi</Button>
        <Button Grid.Row="2" Grid.Column="1" Name="Odustani" Click="Odustani_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Width="95" Height="40" Background="CadetBlue" Margin="10, 10, 60, 10">Odustani</Button>
        <TextBox Name="naziv" Grid.Row="0" Grid.Column="1" Width="122" Height="27" TextChanged="naziv_TextChanged"></TextBox>
        <TextBox Name="kolicina" Grid.Row="1" Grid.Column="1" Width="122" Height="27" TextChanged="kolicina_TextChanged"></TextBox>
    </Grid>
</Window>
