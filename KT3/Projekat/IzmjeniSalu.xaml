<Window x:Class="Projekat.IzmjeniSalu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="IzmjeniSalu" Height="400" Width="500" WindowStartupLocation="CenterScreen" Background="LightSteelBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20" FontSize="17">Broj prostorije:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20" FontSize="17">Namjena:</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20" FontSize="17">Tip prostorije:</TextBlock>
       
        <TextBox Grid.Row="0" Grid.Column="1" Width="190" Height="30" BorderBrush="Black" Name="text1" TextChanged="text1_TextChanged"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Width="190" Height="30" BorderBrush="Black" Name="text2" TextChanged="text2_TextChanged"></TextBox>
        <ComboBox Grid.Row="2" Grid.Column="1" Width="190" Height="30" BorderBrush="Black" Name="combo1">
            <ComboBoxItem Content="Sala za operacije"/>
            <ComboBoxItem Content="Sala za preglede"/>
        </ComboBox>
       
        <Button Grid.Column="0" Grid.Row="5" Width="100" Height="40" Background="CadetBlue" Name="Potvrdi" HorizontalAlignment="Right" Margin="10" Click="Button_Click">Potvrdi</Button>
        <Button Grid.Column="1" Grid.Row="5" Width="100" Height="40" Background="CadetBlue" HorizontalAlignment="Left" Margin="10" Click="Button_Click_1">Odustani</Button>
    </Grid>
</Window>
