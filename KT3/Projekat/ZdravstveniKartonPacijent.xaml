<Page x:Class="Projekat.ZdravstveniKartonPacijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Zdravstveni karton" Height="600" Width="800" FontSize="15" Background="#dbe2ef">

    <DockPanel>
        <StackPanel Orientation="Vertical" Margin="0,0,0,0" Width="800" Height="600">
            <Grid  Margin="0,0,0,0" Height="578">
                <StackPanel Margin="0,0,0,-22" >
                    <StackPanel Height="40" Background="#e8f1f5" Orientation="Horizontal">
                        <StackPanel Height="40" Width="150" HorizontalAlignment="Left" Margin="10, 0, 0, 0" Orientation="Horizontal">
                            <Image Source="slike/medical-symbol.png" Width="35" Height="35" HorizontalAlignment="Left"/>
                            <TextBlock Text="ZDRAVO" FontSize="25" Margin="5, 0, 0,0" FontWeight="Bold" FontStyle="Italic" />
                        </StackPanel>
                        <StackPanel Height="40" Width="620" HorizontalAlignment="Right">
                            <Menu Margin="480, 7.5, 0, 0" BorderThickness="0.5" BorderBrush="#004a7c">
                                <MenuItem Header="_Ime i prezime">
                                    <MenuItem.Icon>
                                        <Image Source="/slike/user.png" />
                                    </MenuItem.Icon>
                                    <MenuItem Header="_Vaš profil" />
                                    <Separator/>
                                    <MenuItem Header="_Popuni anketu" />
                                    <Separator/>
                                    <MenuItem Header="_Izaberite jezik" IsEnabled="False" />
                                    <MenuItem Header="_sr" />
                                    <MenuItem Header="_en"/>
                                    <Separator />
                                    <MenuItem Header="_Izaberite temu" IsEnabled="False" />
                                    <MenuItem Header="_Svetla" Name="svetlaTema" />
                                    <MenuItem Header="_Tamna"/>
                                    <Separator />
                                    <MenuItem Header="_Odjavite se" Name="odjava" Click="odjava_Click"/>
                                </MenuItem>
                            </Menu>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Margin="20, 0, 0, 0" FontSize="14" Foreground="#004a7c" Height="25">
                <Hyperlink NavigateUri="PrikaziTermin.xaml">
                    <Run Text="Početna stranica"/>
                </Hyperlink>
                <Run Text="  "/>
                <Hyperlink Name="zakazi" Click="zakazi_Click">
                    <Run Text="Zakažite termin"/>
                </Hyperlink>
                <Run Text="  "/>
                <Hyperlink Name="uvid" Click="uvid_Click">
                    <Run Text="Uvid u zakazane termine"/>
                </Hyperlink>
                <Run Text=" "/>
                <Hyperlink Name="karton" Click="karton_Click">
                    <Run Text="Zdravstveni karton"/>
                </Hyperlink>
                    </TextBlock>
                    <TabControl x:Name="tab" HorizontalAlignment="Left"
                    Height="445" VerticalAlignment="Top" Width="615" Margin="90,40,0,100" BorderBrush="Gainsboro" SelectionChanged="tab_SelectionChanged">
                        <TabControl.Resources>
                            <Style TargetType="{x:Type TabItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TabItem}">
                                            <Border x:Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#edffec" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <TabItem Header="Lični podaci" x:Name="podaci" FontSize="15" Height="25" Margin="0,0,0.5,0" VerticalAlignment="Top" >
                            <Grid Background="#FFF9F7F7" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="311*"/>
                                    <ColumnDefinition Width="72*"/>
                                    <ColumnDefinition Width="151*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="48,0,48,325">
                                    <Label Content="Ime" Margin="0,10,0,0" FontSize="15" HorizontalAlignment="Right" Width="35"/>
                                    <TextBox x:Name="ime" IsEnabled="False"
                             HorizontalAlignment="Center" Height="25" Margin="40,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="48,40,48,250">
                                    <Label Content="Prezime" Margin="0,0,0,0" FontSize="15" HorizontalAlignment="Right" Width="63"/>
                                    <TextBox x:Name="prezime" IsEnabled="False"
                        HorizontalAlignment="Center" Height="25" Margin="12,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="156,0,155,0"/>
                                <TextBox x:Name="poltxt" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                                <Label Content="Pol" Margin="0,113,190,199" FontSize="15" HorizontalAlignment="Right" Width="31"/>
                                <TextBox x:Name="jmbg" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                                <Label Content="JMBG" Margin="0,78,190,234" FontSize="15" HorizontalAlignment="Right" Width="47"/>
                                <TextBox x:Name="brojTel" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                                <Label Content="Broj telefona" Margin="0,148,190,164" FontSize="15" HorizontalAlignment="Right" Width="95"/>
                                <TextBox x:Name="email" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,184,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                                <Label Content="E-mail" Margin="0,182,190,130" FontSize="15" HorizontalAlignment="Right" Width="51"/>
                                <TextBox x:Name="adresa" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                                <Label Content="Adresa" Margin="0,217,190,95" FontSize="15" HorizontalAlignment="Right" Width="55"/>
                                <TextBox x:Name="bracStanje" IsEnabled="False" 
                        HorizontalAlignment="Left" Height="25" Margin="130,254,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                                <Label Content="Bracno stanje" Margin="0,252,190,60" FontSize="15" HorizontalAlignment="Right" Width="99"/>
                                <TextBox x:Name="zanimanje" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                                <Label Content="Zanimanje" Margin="0,287,190,25" FontSize="15" HorizontalAlignment="Right" Width="79"/>
                                <Border BorderThickness="1" BorderBrush="Black" Grid.Column="1" Margin="52,35,70,227" Grid.ColumnSpan="2">
                                    <Image Grid.Column="1" Margin="5" Source="slike\menager.jpg" />
                                </Border>
                                <Label Content="Korisnicko ime" HorizontalAlignment="Left" Height="30" Width="113" VerticalAlignment="Bottom" Margin="30,0,0,184" FontWeight="Bold" Grid.Column="1" Grid.ColumnSpan="2"/>
                                <Button x:Name="izmeniBtn" Content="Izmenite podatke" Grid.Column="1" Height="30" Margin="34,327,46,25" Click="izmeniBtn_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF" Grid.ColumnSpan="2"/>
                                <Button x:Name="sacuvajIzmene" Content="Potvrdi" Grid.Column="1" Height="30" Margin="34,327,126,25" Click="sacuvajIzmene_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF" Grid.ColumnSpan="2"/>
                                <Button x:Name="odustani" Content="Odustani" Grid.Column="2" Height="30" Margin="30,327,46,25" Click="odustani_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
                                <Label Content="Lozinka" HorizontalAlignment="Left" Height="30" Width="113" VerticalAlignment="Bottom" Margin="32,0,0,125" FontWeight="Bold" Grid.Column="1" Grid.ColumnSpan="2"/>
                                <ComboBox IsEnabled="False" Width="140" Height="25" x:Name="lekar" Margin="130,337,41,20"/>
                                <Label Content="Izabrani lekar" Margin="0,323,188,-11" FontSize="15" HorizontalAlignment="Right" Width="99"/>
                                <PasswordBox x:Name="lozinka" IsEnabled="False" HorizontalAlignment="Left" Height="25" RenderTransformOrigin="0.5,0.5" Width="145" Grid.Column="1" Margin="34,243,0,114" Grid.ColumnSpan="2">
                                    <PasswordBox.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </PasswordBox.RenderTransform>
                                </PasswordBox>
                                <TextBox x:Name="korisnickoIme" IsEnabled="False" HorizontalAlignment="Left" Height="25" RenderTransformOrigin="0.5,0.5" Width="143" Grid.Column="1" Margin="34,188,0,169" Grid.ColumnSpan="2"/>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Lekarski recepti" 
                     ToolTip="Uvid u lekarske recepte" x:Name="recepti" FontSize="16" FontFamily="Arial">
                            <ListView x:Name="tabelaRecepata" SelectionChanged="ListView_SelectionChanged" Background="#f9f7f7" FontFamily="Segoe UI" FontSize="16" Margin="0,-2,0,0.5">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="35" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Background="#112d4e" Foreground="#f9f7f7" HorizontalAlignment="Right" BorderBrush="#3f72af" Content="ℹ︎" FontSize="14" Click="Button_Click_1"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Naziv leka" 
                                        Width="90" DisplayMemberBinding="{Binding NazivLeka}"/>
                                        <GridViewColumn Header="Datum" 
                                         Width="85" DisplayMemberBinding="{Binding DatumPropisivanjaLeka}"/>
                                        <GridViewColumn Header="Početak korišćenja" 
                                        Width="130" DisplayMemberBinding="{Binding PocetakKoriscenja}"/>
                                        <GridViewColumn Header="Broj dana" Width="75"
                                         DisplayMemberBinding="{Binding BrojDanaKoriscenja}"/>
                                        <GridViewColumn Header="Dnevna kolicina" Width="110"
                                            DisplayMemberBinding="{Binding DnevnaKolicina}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>

                        <TabItem Header="Istorija bolesti" x:Name="istorijaBolesti" FontSize="16" >
                            <ListView x:Name="prikazAnamnezi" SelectionChanged="prikazAnamnezi_SelectionChanged" Background="#f9f7f7" FontFamily="Segoe UI" FontSize="16" Margin="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="35">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Background="#112d4e" x:Name="infoAnamneza" HorizontalAlignment="Right" Foreground="#f9f7f7" BorderBrush="#3f72af" Content="ℹ︎" FontSize="14" Click="infoAnamneza_Click"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Datum" Width="120" 
                                            DisplayMemberBinding="{Binding Datum}"/>
                                        <GridViewColumn Header="Anamneza" Width="370" 
                                            DisplayMemberBinding="{Binding OpisBolesti}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>

                        <TabItem Header="Lekarski uputi" x:Name="uputi" FontSize="16">
                            <ListView x:Name="prikazUputa" SelectionChanged="prikazUputa_SelectionChanged" Background="#f9f7f7" FontFamily="Segoe UI" FontSize="16" Margin="0,0,0,0.5">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="bice nesto...."/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                        </TabItem>
                    </TabControl>
                    <Button Content="Nazad" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90"  Height="30" Margin="29,0,0,0" Click="Button_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"  />
                </StackPanel>
            </Grid>
        </StackPanel>
        <!-- TABOVI -->
        <Frame x:Name="frame" />

    </DockPanel>
</Page>
