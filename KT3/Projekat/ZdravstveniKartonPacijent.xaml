<Window x:Class="Projekat.ZdravstveniKartonPacijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Zdravstveni karton" Height="500" Width="600" FontSize="15" WindowStartupLocation="CenterScreen" Background="#dbe2ef">

    <Grid>

        <!-- TABOVI -->
        <TabControl x:Name="tab" HorizontalAlignment="Left" 
                    Height="395" VerticalAlignment="Top" Width="540" Margin="31,20,0,0" BorderBrush="Gainsboro" SelectionChanged="tab_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#edffec" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            
            <!-- LICNI PODACI -->
            <TabItem Header="Lični podaci" Name="podaci" FontSize="15" Height="25" Margin="0,0,0.5,0" VerticalAlignment="Top">
                <Grid Margin="-2,0,2,0" Background="#FFF9F7F7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="311*"></ColumnDefinition>
                        <ColumnDefinition Width="223*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ime" IsEnabled="False"
                             HorizontalAlignment="Left" Height="25" Margin="130,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                    <Label Content="Ime" Margin="0,8,190,304" FontSize="15" HorizontalAlignment="Right" Width="35"/>
                    <TextBox x:Name="prezime" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                    <Label Content="Prezime" Margin="0,43,190,269" FontSize="15" HorizontalAlignment="Right" Width="63"/>
                    <TextBox x:Name="poltxt" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                    <Label Content="Pol" Margin="0,113,190,199" FontSize="15" HorizontalAlignment="Right" Width="31"/>
                    <TextBox x:Name="jmbg" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                    <Label Content="JMBG" Margin="0,78,190,234" FontSize="15" HorizontalAlignment="Right" Width="47"/>
                    <TextBox x:Name="brojTel" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                    <Label Content="Broj telefona" Margin="0,148,190,164" FontSize="15" HorizontalAlignment="Right" Width="95"/>
                    <TextBox x:Name="email" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,184,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                    <Label Content="E-mail" Margin="0,182,190,130" FontSize="15" HorizontalAlignment="Right" Width="51"/>
                    <TextBox x:Name="adresa" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                    <Label Content="Adresa" Margin="0,217,190,95" FontSize="15" HorizontalAlignment="Right" Width="55"/>
                    <TextBox x:Name="bracStanje" IsEnabled="False" 
                        HorizontalAlignment="Left" Height="25" Margin="130,254,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="140" />
                    <Label Content="Bracno stanje" Margin="0,252,190,60" FontSize="15" HorizontalAlignment="Right" Width="99"/>
                    <TextBox x:Name="zanimanje" IsEnabled="False"
                        HorizontalAlignment="Left" Height="25" Margin="130,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" />
                    <Label Content="Zanimanje" Margin="0,287,190,25" FontSize="15" HorizontalAlignment="Right" Width="79"/>
                    <Border BorderThickness="1" BorderBrush="Black" Grid.Column="1" Margin="52,35,70,227">
                        <Image Grid.Column="1" Margin="5" Source="slike\menager.jpg" />
                    </Border>
                    <Label Content="Korisnicko ime" HorizontalAlignment="Left" Height="30" Width="113" VerticalAlignment="Bottom" Margin="30,0,0,184" FontWeight="Bold" Grid.Column="1"/>
                    <Button x:Name="izmeniBtn" Content="Izmenite podatke" Grid.Column="1" Height="30" Margin="34,317,46,15" Click="izmeniBtn_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
                    <Button x:Name="sacuvajIzmene" Content="Potvrdi" Grid.Column="1" Height="30" Margin="34,317,126,15" Click="sacuvajIzmene_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
                    <Button x:Name="odustani" Content="Odustani" Grid.Column="1" Height="30" Margin="102,317,46,15" Click="odustani_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
                    <Label Content="Lozinka" HorizontalAlignment="Left" Height="30" Width="113" VerticalAlignment="Bottom" Margin="32,0,0,125" FontWeight="Bold" Grid.Column="1"/>
                    <ComboBox IsEnabled="False" Width="140" Height="25" Name="lekar" Margin="130,327,41,10"></ComboBox>
                    <Label Content="Izabrani lekar" Margin="0,323,188,-11" FontSize="15" HorizontalAlignment="Right" Width="99"/>
                    <PasswordBox x:Name="lozinka" IsEnabled="False" HorizontalAlignment="Left" Height="25" RenderTransformOrigin="0.5,0.5" Width="145" Grid.Column="1" Margin="34,233,0,104">
                        <PasswordBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </PasswordBox.RenderTransform>
                    </PasswordBox>
                    <TextBox x:Name="korisnickoIme" IsEnabled="False" HorizontalAlignment="Left" Height="25" RenderTransformOrigin="0.5,0.5" Width="143" Grid.Column="1" Margin="34,178,0,159"/>
                </Grid>
            </TabItem>
            
            <!-- LEKARSKI RECEPTI  -->
            <TabItem Header="Lekarski recepti" 
                     ToolTip="Uvid u lekarske recepte" x:Name="recepti" FontSize="15" FontFamily="Arial">
                <ListView x:Name="tabelaRecepata" SelectionChanged="ListView_SelectionChanged" Background="#f9f7f7" FontFamily="Segoe UI" FontSize="14" Margin="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="35" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Background="#112d4e" Foreground="#f9f7f7" HorizontalAlignment="Right" BorderBrush="#3f72af" Content="ℹ︎" FontSize="14" Click="Button_Click_1"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Naziv leka" 
                                        Width="90" DisplayMemberBinding="{Binding NazivLeka}"/>
                            <GridViewColumn Header="Datum" 
                                         Width="85" DisplayMemberBinding="{Binding DatumPropisivanjaLeka}"/>
                            <GridViewColumn Header="Početak korišćenja" 
                                        Width="130" DisplayMemberBinding="{Binding PocetakKoriscenja}"/>
                            <GridViewColumn Header="Broj dana" Width="75"
                                         DisplayMemberBinding="{Binding BrojDanaKoriscenja}"/>
                            <GridViewColumn Header="Dnevna kolicina" Width="110"
                                            DisplayMemberBinding="{Binding DnevnaKolicina}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            
            <!-- ISTORIJA BOLESTI - ANAMNEZE -->
            <TabItem Header="Istorija bolesti" Name="istorijaBolesti" FontSize="15" >
                <ListView x:Name="prikazAnamnezi" SelectionChanged="prikazAnamnezi_SelectionChanged" Background="#f9f7f7" FontFamily="Segoe UI" FontSize="14" Margin="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="35">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Background="#112d4e" Name="infoAnamneza" HorizontalAlignment="Right" Foreground="#f9f7f7" BorderBrush="#3f72af" Content="ℹ︎" FontSize="14" Click="infoAnamneza_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Datum" Width="120" 
                                            DisplayMemberBinding="{Binding Datum}"/>
                            <GridViewColumn Header="Anamneza" Width="370" 
                                            DisplayMemberBinding="{Binding OpisBolesti}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            
            <!-- LEKARSKI UPUTI -->
            <TabItem Header="Lekarski uputi" Name="uputi" FontSize="15">
                <ListView x:Name="prikazUputa" SelectionChanged="prikazUputa_SelectionChanged" Background="#f9f7f7" FontFamily="Segoe UI" FontSize="13" Margin="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="bice nesto...."></GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </TabItem>
        </TabControl>
        <Button Content="Nazad" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90"  Height="30" Margin="29,426,0,0" Click="Button_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"  />



    </Grid>
</Window>
