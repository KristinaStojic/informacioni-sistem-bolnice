<Window x:Class="Projekat.ZdravstveniKartonPacijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Zdravstveni karton" Height="500" Width="600" FontSize="15" WindowStartupLocation="CenterScreen"
        Background="#e3fdfd">
    <Grid>
        <!-- Tabovi -->
        <TabControl x:Name="tab" HorizontalAlignment="Left" 
                    Height="375" VerticalAlignment="Top" Width="540" Margin="29,30,0,0" BorderBrush="Gainsboro" SelectionChanged="tab_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Lični podaci" Name="podaci" FontSize="15">
                <!--DataGrid x:Name="dataGridKarton" Margin="10,3,6,3" SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="RBR"></DataGridTextColumn>
                        <DataGridTextColumn Header="lekarski recept" MaxWidth="100"></DataGridTextColumn>
                    </DataGrid.Columns>
                </-->
            </TabItem>
            <!-- lekarski recepti -->
            <TabItem Header="Lekarski recepti" 
                     ToolTip="Uvid u lekarske recepte" x:Name="recepti" FontSize="15" FontFamily="Arial">
                <ListView x:Name="tabelaRecepata" SelectionChanged="ListView_SelectionChanged" FontFamily="Segoe UI" FontWeight="Bold" FontSize="13" Margin="0,0,-6,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Naziv leka" 
                                        Width="85" DisplayMemberBinding="{Binding NazivLeka}"/>
                            <GridViewColumn Header="Datum" 
                                         Width="83" DisplayMemberBinding="{Binding DatumPropisivanjaLeka}"/>
                            <GridViewColumn Header="Početak korišćenja" 
                                         DisplayMemberBinding="{Binding PocetakKoriscenja}"/>
                            <GridViewColumn Header="Broj dana"
                                         DisplayMemberBinding="{Binding BrojDanaKoriscenja}"/>
                            <GridViewColumn Header="Dnevna kolicina"
                                            DisplayMemberBinding="{Binding DnevnaKolicina}"/>
                            <GridViewColumn Header="Informacije"
                                            Width="80" DisplayMemberBinding="{Binding DnevnaKolicina}">
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Istorija bolesti" Name="istorijaBolesti" FontSize="15"/>
            <TabItem Header="Lekarski uputi" Name="uputi" FontSize="15"/>
        </TabControl>
        <Button Content="Nazad" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90"  Height="30" Margin="29,426,0,0" Click="Button_Click"  />

    </Grid>
</Window>
