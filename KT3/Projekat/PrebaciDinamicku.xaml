<Window x:Class="Projekat.PrebaciDinamicku"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat" xmlns:local1="clr-namespace:Projekat.Model"
        mc:Ignorable="d"
        Title="Prebacivanje dinamicke opreme" Height="320" Width="360" WindowStartupLocation="CenterScreen" Background="LightSteelBlue" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" IsEnabled="False">Naziv opreme:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">U salu:</TextBlock>
    
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Kolicina:</TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Name="oprema" Width="125" Height="27" IsEnabled="False"></TextBox>
        <ComboBox Name="kombo" Grid.Row="1" Grid.Column="1" Width="125" Height="27" ItemsSource="{Binding Sale}" SelectionChanged="kombo_SelectionChanged"></ComboBox>
        <!--<TextBox Grid.Row="2" Grid.Column="1" Width="125" Height="27" Name="Kolicina"></TextBox>-->
        <TextBox Grid.Row="2" Grid.Column="1" Width="125" Height="27" Name="Kolicina" TextChanged="Kolicina_TextChanged">
            <TextBox.Text>
                <Binding Path="Validacija" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <local1:Validacija ValidationStep="ConvertedProposedValue"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <StackPanel>
                        <AdornedElementPlaceholder/>
                        <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                    </StackPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
        </TextBox>
        <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Name="maks" Margin="0, 0, 10, 0"></TextBlock>
        <Button Grid.Row="3" Grid.Column="0" IsEnabled="{Binding Path= dugmeOmoguceno}" Background="CadetBlue" Width="100" Height="40" HorizontalAlignment="Right" Margin="10" Click="Button_Click_1" Name="Potvrdi">Potvrdi</Button>
        <Button Grid.Row="3" Grid.Column="1" Background="CadetBlue" Width="100" Height="40" Click="Button_Click" HorizontalAlignment="Left" Margin="10">Odustani</Button>
    </Grid>
</Window>
