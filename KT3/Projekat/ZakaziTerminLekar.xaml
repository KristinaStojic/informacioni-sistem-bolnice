            <ComboBoxItem HorizontalAlignment="Center">19:00</ComboBoxItem>
            <ComboBoxItem HorizontalAlignment="Center">19:30</ComboBoxItem>
            <ComboBoxItem HorizontalAlignment="Center">20:00</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="tipPregleda" Grid.Column="2" Grid.Row="4"  Margin="18,10,18,0" SelectedIndex="0" Height="30">
            <ComboBoxItem Content="Pregled"/>
            <ComboBoxItem Content="Operacija"/>
        </ComboBox>

        <ComboBox x:Name="prostorije" Grid.Column="2" Grid.Row="5"  Margin="18,10,0,0" SelectedIndex="0" HorizontalAlignment="Left" Width="168" Height="30" />
        <Button Grid.Column="1" Grid.Row="9" Margin="57,17,56,14" Click="Button_Click_2" Content="Potvrdi" Width="91"/>
        <Button Grid.Column="2" Grid.Row="9"  Margin="57,17,56,14" Click="Button_Click_3" Content="Odustani" Width="91"/>
        <ComboBox x:Name="pacijenti" Grid.Column="2" Grid.Row="6"  Margin="18,10,18,0" SelectedIndex="0" Height="30">
        </ComboBox>


        <ListView x:Name="nadjiLek" Grid.Column="1" Height="170" Margin="20,10,19,0" Grid.Row="8" VerticalAlignment="Top" Grid.ColumnSpan="2" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ime" DisplayMemberBinding="{Binding nazivLeka}"
                                    Width="120"/>
                    <GridViewColumn Header="Prezime" DisplayMemberBinding="{Binding sifraLeka}"
                                    Width="120"/>
                    <GridViewColumn Header="Specijalizacija" DisplayMemberBinding="{Binding sifraLeka}"
                                    Width="123"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="20,10,0,0" Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Button Content="Prostorija" Grid.Column="2" HorizontalAlignment="Left" Margin="18,10,0,0" Grid.Row="7" VerticalAlignment="Top" Width="83" Height="30"/>
        <Button Content="Pacijent" Grid.Column="2" HorizontalAlignment="Left" Margin="101,10,0,0" Grid.Row="7" VerticalAlignment="Top" Width="83" Height="30"/>
    </Grid>

</Window>
