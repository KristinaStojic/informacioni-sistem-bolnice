            <GroupBox Header="Fotografija" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="472,-16,-366.8,0" Width="310" Height="208"/>

        </GroupBox>
        <Label Grid.Row="0" FontSize="15" VerticalContentAlignment="Center" Content="Ime pacijenta:" Margin="63,123,678.6,495.2" Height="28" Width="118"/>
        <Label FontSize="15" VerticalContentAlignment="Center" Content="Prezime pacijenta:" Margin="63,156,678.6,462.2" Height="28" Width="118"/>
        <Label FontSize="15" VerticalContentAlignment="Center" Content="JMBG:" Margin="63,189,678.6,429.2" Height="28" Width="118"/>
        <Label FontSize="15" VerticalContentAlignment="Center" Content="Pol:" Margin="63,217,678.6,401.2" Height="28" Width="118"/>
        <Label FontSize="15" VerticalContentAlignment="Center" Content="Status naloga:" Margin="63,250,678.6,368.2" Height="28" Width="118"/>
        <Label FontSize="15" VerticalContentAlignment="Center" Content="Broj telefona:" Margin="63,282,678.6,336.2" Height="28" Width="118"/>
