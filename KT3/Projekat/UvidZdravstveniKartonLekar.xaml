        <Button Content="Anamneza" Background="DodgerBlue" HorizontalAlignment="Left" Margin="37,552,0,0" VerticalAlignment="Top" Width="135" Height="50" RenderTransformOrigin="0.475,0.747" Click="Button_Click_2"/>
        <GroupBox Header="Izabrani lekar" HorizontalAlignment="Left" Height="208" Margin="517,296,0,0" VerticalAlignment="Top" Width="312" >
            <TextBox Name="lekar" HorizontalAlignment="Left" Height="28" Margin="77,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" IsEnabled="False"/>
        </GroupBox>
        <Image Source="slike/doktor.png" Width="108" HorizontalAlignment="Center" Margin="626,322,125.6,197.2" RenderTransformOrigin="0.475,0.468"/>
    </Grid>
</Window>
