        <Label FontSize="15" VerticalContentAlignment="Center" Content="Bracno stanje:" Margin="63,382,678.6,236.2" Height="28" Width="118"/>
        <Label FontSize="15" VerticalContentAlignment="Center" Content="Zanimanje:" Margin="63,421,678.6,197.2" Height="28" Width="118"/>
        <TextBox x:Name="ime" Grid.Row="0" Margin="265,123,434.6,495.2" IsReadOnly="True"  Background="OldLace" Height="28" Width="160" />
        <TextBox x:Name="prezime" Margin="265,156,434.6,462.2" IsReadOnly="True" Background="OldLace" Height="28" Width="160"/>
        <TextBox  x:Name="jmbg" Margin="265,189,434.6,429.2" IsReadOnly="True" Background="OldLace" Height="28" Width="160"/>
        <ComboBox x:Name="combo2"  Margin="265,222,434.6,396.2" IsReadOnly="True" IsEnabled="False" Background="OldLace" Height="28" Width="160">
            <ComboBoxItem Content="M"/>
            <ComboBoxItem Content="Z"/>
        </ComboBox>
        <ComboBox x:Name="combo"  Margin="265,255,434.6,363.2" SelectedIndex="0" IsReadOnly="True" Background="OldLace" Height="28" Width="160">
            <ComboBoxItem Content="STALAN"/>
            <ComboBoxItem Content="GUEST"/>
        </ComboBox>
        <ComboBox x:Name="combo3"  Margin="265,388,434.6,230.2" IsReadOnly="True" IsEnabled="False" Background="OldLace" Height="28" Width="160">
            <ComboBoxItem Content="Neozenjen/Neudata"/>
            <ComboBoxItem Content="Ozenjen/Udata"/>
            <ComboBoxItem Content="Udovac/Udovica"/>
            <ComboBoxItem Content="Razveden/Razvedena"/>
            <ComboBoxItem Content="Neodredjeno"/>
        </ComboBox>
        <TextBox x:Name="brojTelefona" Margin="265,289,434.6,329.2" IsReadOnly="True" Background="OldLace" Height="28" Width="160"/>
        <TextBox x:Name="email" Margin="265,322,434.6,296.2" IsReadOnly="True" Background="OldLace" Height="28" Width="160"/>
        <TextBox x:Name="adresa" Margin="265,355,434.6,263.2" IsReadOnly="True" Background="OldLace" Height="28" Width="160"/>
        <TextBox x:Name="zanimanje" Margin="265,421,434.6,197.2" IsReadOnly="True" Background="OldLace" Height="28" Width="160"/>
        <Button Content="Alergeni" Background="DodgerBlue" HorizontalAlignment="Left" Margin="529,552,0,0" VerticalAlignment="Top" Width="135" Height="50" RenderTransformOrigin="0.475,0.747" />
