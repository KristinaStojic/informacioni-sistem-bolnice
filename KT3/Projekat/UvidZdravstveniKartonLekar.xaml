        <Button Content="Recepti" Background="DodgerBlue" HorizontalAlignment="Left" Margin="197,552,0,0" VerticalAlignment="Top" Width="135" Height="50" RenderTransformOrigin="0.475,0.747" Click="Button_Click_1"/>
