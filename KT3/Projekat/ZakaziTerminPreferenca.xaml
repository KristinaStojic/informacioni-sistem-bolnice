<Window x:Class="Projekat.ZakaziTerminPreferenca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Ponudjeni termini" Height="500" Width="600" WindowStartupLocation="CenterScreen" Background="AliceBlue">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Height="350" Width="500" x:Name="preferencaGrid" ItemsSource="{Binding Path=Termini2}" SelectionChanged="preferencaGrid_SelectionChanged"
                  IsReadOnly="True" GridLinesVisibility="Horizontal" HorizontalAlignment="Center"  AutoGenerateColumns="False" Margin="50,15,45,107.5" BorderBrush="DarkBlue" VerticalAlignment="Top" Foreground="Black" >
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF0089FF" Offset="0.113"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.Background>
            <DataGrid.Columns >
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" Width="100" />
                <DataGridTextColumn Header="Vreme pocetka" Binding="{Binding VremePocetka}" Width="100" />
                <DataGridTextColumn x:Name="lekar" Header="Prezime lekara" Binding="{Binding Lekar.PrezimeLek}" Width="110"/>
                <DataGridTextColumn x:Name="lekar2" Header="Ime lekara" Binding="{Binding Lekar.ImeLek}" Width="100"/>
                <DataGridTextColumn Header="Sala" Binding="{Binding Prostorija.Id}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Zakazi termin" Name="zakazi" HorizontalAlignment="Left" Margin="190,390,0,0" VerticalAlignment="Top" Width="100" 
                Height="40" ToolTip="Selektujte jedan od ponudjenih termina koji zelite da zakazete" Click="zakazi_Click"/>
        <Button Content="Nazad"  Name="nazad" HorizontalAlignment="Left" Margin="350,390,0,0" VerticalAlignment="Top" Width="100" 
            Height="40" Click="nazad_Click"/>
    </Grid>

</Window>
