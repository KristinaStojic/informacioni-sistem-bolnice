<Window x:Class="Projekat.ZakaziTerminPreferenca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Ponudjeni termini" Height="500" Width="600" WindowStartupLocation="CenterScreen" Background="#d3e0ea">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Height="350" Width="500" x:Name="preferencaGrid" ItemsSource="{Binding Path=Termini2}" SelectionChanged="preferencaGrid_SelectionChanged"
                  IsReadOnly="True" GridLinesVisibility="Horizontal" HorizontalAlignment="Center"  AutoGenerateColumns="False" Margin="50,15,45,107.5" BorderBrush="#FF276678" VerticalAlignment="Top" Foreground="Black" Background="#FFF9F7F7" >
            <DataGrid.Columns >
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" Width="100" />
                <DataGridTextColumn Header="Vreme pocetka" Binding="{Binding VremePocetka}" Width="100" />
                <DataGridTextColumn x:Name="lekar" Header="Prezime lekara" Binding="{Binding Lekar.PrezimeLek}" Width="110"/>
                <DataGridTextColumn x:Name="lekar2" Header="Ime lekara" Binding="{Binding Lekar.ImeLek}" Width="100"/>
                <DataGridTextColumn Header="Sala" Binding="{Binding Prostorija.Id}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Zakazi" Name="zakazi" HorizontalAlignment="Left" Margin="170,390,0,0" VerticalAlignment="Top" Width="100" 
                Height="40" ToolTip="Selektujte jedan od ponudjenih termina koji zelite da zakazete" Click="zakazi_Click" RenderTransformOrigin="1,1" BorderBrush="#FF3F72AF" Foreground="#FFF9F7F7" Background="#FF112D4E"/>
        <Button Content="Potvrdi" Name="zakaziLekar" HorizontalAlignment="Left" Margin="170,390,0,0" VerticalAlignment="Top" Width="100" 
                Height="40" ToolTip="Selektujte jedan od ponudjenih termina koji zelite da zakazete" Click="zakaziLekar_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
        <Button Content="Nazad"  Name="nazad" HorizontalAlignment="Left" Margin="325,390,0,0" VerticalAlignment="Top" Width="100" 
            Height="40" Click="nazad_Click" Background="#FF112D4E" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
        <Button x:Name="lekari" Content="Zakazite termin kod drugog lekara" HorizontalAlignment="Left" Margin="75,150,0,0" VerticalAlignment="Top" Width="195" Height="95" Click="lekari_Click" Background="#FF112D4E" OpacityMask="White" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
        <Button Name="preporuka" Content="Prva tri slobodna termina" HorizontalAlignment="Left" Margin="325,150,0,0" VerticalAlignment="Top" Width="195" Height="95" Click="preporuka_Click" Background="#FF112D4E" RenderTransformOrigin="0.5,0.5" FontSize="14" Foreground="#FFF9F7F7" BorderBrush="#FF3F72AF"/>
        <GroupBox x:Name="grupa" Header="Izaberite lekara" HorizontalAlignment="Left" Height="316" Margin="132,19,0,0" VerticalAlignment="Top" Width="318" RenderTransformOrigin="0.858,0.494">
            <TextBox DockPanel.Dock="Top" x:Name="txtFilter" TextChanged="txtFilter_TextChanged" Margin="23,14,15,254" Height="25">
                <TextBox.Style>
                    <Style xmlns:sys="clr-namespace:System;assembly=mscorlib" TargetType="{x:Type TextBox}">
                        <Style.Resources>
                            <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                <VisualBrush.Visual>
                                    <Label Content="Pretražite listu po prezimenu lekara" Foreground="LightGray" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </GroupBox>
        <ListView x:Name="datagridLekari" SelectionMode="Single" Margin="142,89,152,183.5" SelectionChanged="datagridLekari_SelectionChanged" Background="#FFF9F7F7" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" 
                        Width="33" DisplayMemberBinding="{Binding IdLekara}"/>
                    <GridViewColumn Header="Ime" 
                        Width="80" DisplayMemberBinding="{Binding ImeLek}"/>
                    <GridViewColumn Header="Prezime" 
                        Width="80" DisplayMemberBinding="{Binding PrezimeLek}"/>
                    <GridViewColumn Header="Specijalizacija"
                        Width="90" DisplayMemberBinding="{Binding specijalizacija}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
